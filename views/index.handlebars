<div class="container">

    <div class="text-center">
        <img src="/assets/images/burger-vector-icon-png_201035.jpg" id="burgerImage" alt="Responsive image" height="225"
            class="mb-4 mt-4">
        <h1 class="display-4 font-weight-bold font-italic text-uppercase text-success mt-5">Eat-Da-Burger!</h1>

        <p class="lead mb-5">Write the name of the burger of you dreams. <br> Click <strong
                class="text-primary font-weight-bold">SUBMIT</strong> to add to the list. Don't forget to <strong
                class="text-danger font-weight-bold">DEVOUT IT</strong>.
        </p>
    </div>
    <hr>
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h3 class="text-primary text-uppercase font-weight-bold mt-5">What burger are you eating?</h3>

        </div>
    </div>
    <div class="row">

        <div class="col-md-8 offset-md-2 mb-5">
            <form class="create-form">

                <div class="form-group">
                    <label for="exampleInputName">Burger Name</label>
                    <input type="text" class="form-control form-control-lg" id="exampleInputName"
                        aria-describedby="emailHelp" placeholder="Enter burger name">
                    <small id="nameHelp" class="form-text text-muted">Remember you're the chef in this
                        "kitchen".</small>
                </div>

                <button type="submit" class="btn btn-primary font-weight-bold text-uppercase">Submit</button>
            </form>
        </div>
    </div>
    <hr>


    <div class="container mt-5">

        <div class="row">
            <div class="col-6">
                <div class="text-center text-success mb-2">
                    <i class="fas fa-hamburger fa-2x"></i>
                </div>

                <h4 class="text-success font-weight-bold text-uppercase text-center"> Burgers Created!</h4>

                <table class="table">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Burger Name</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each burger}}
                        <tr>
                            <th scope="row">{{id}}</th>
                            <td>{{name}}</td>

                            <td>
                                {{#unless devoured}}
                                {{> burgers/burger-block devour=false }}
                                {{/unless}}
                                {{!-- <button class="change-value btn btn-success font-weight-bold text-uppercase"
                                    data-id="{{this.id}}">devour!</button> --}}
                            </td>

                        </tr>

                        {{/each}}
                    </tbody>
                </table>
            </div>


            <div class="col-6 ">
                <div class="text-center text-danger mb-2">
                    <i class="fas fa-utensils fa-2x"></i>
                </div>


                <h4 class="text-danger font-weight-bold text-uppercase text-center">Burgers Devoured!</h4>

                <table class="table">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Burger Name</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>

                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>